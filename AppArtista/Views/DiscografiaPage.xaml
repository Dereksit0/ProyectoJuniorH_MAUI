<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppArtista.Views.DiscografiaPage"
             BackgroundColor="{StaticResource Primary}"
             Title="Ãlbumes">

    <CollectionView x:Name="coleccionAlbumes" 
                SelectionMode="Single" 
                SelectionChanged="OnAlbumSelected" 
                Margin="20">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BackgroundColor="{StaticResource Gray900}" BorderColor="Transparent" Margin="0,0,0,15" Padding="10">
                    <HorizontalStackLayout Spacing="20">
                        <Image Source="{Binding Portada}" WidthRequest="80" HeightRequest="80" Aspect="AspectFill"/>
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label Text="{Binding Nombre}" FontSize="18" FontAttributes="Bold" TextColor="White"/>
                            <Label Text="{Binding Anio}" TextColor="{StaticResource Secondary}"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>