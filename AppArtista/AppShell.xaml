<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppArtista.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppArtista"
    xmlns:pages="clr-namespace:AppArtista.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="AppArtista">

    <FlyoutItem Title="Home">
        <ShellContent Title = "Home" 
        ContentTemplate="{DataTemplate pages:MainPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Biografia">
        <ShellContent Title = "Biografia" 
        ContentTemplate="{DataTemplate pages:Biografia}" />
    </FlyoutItem>
    <FlyoutItem Title="Discografia"> 
        <ShellContent Title = "Discografia" 
        ContentTemplate="{DataTemplate pages:Discografia}" />
    </FlyoutItem>
    <FlyoutItem Title="Eventos">
        <ShellContent Title = "Eventos" 
        ContentTemplate="{DataTemplate pages:Eventos}" />
    </FlyoutItem>
    

</Shell>
