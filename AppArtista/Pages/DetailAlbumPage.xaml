<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="AppArtista.Pages.DetailAlbumPage" 
             Title="DetailAlbumPage"
             BackgroundColor="{DynamicResource PageBackground}">

    <ScrollView>
        <VerticalStackLayout Margin="15">
            <Button 
            Text="Cambiar modo"
            Clicked="OnToggleThemeClicked"
            HorizontalOptions="End"
            BackgroundColor="{DynamicResource PrimaryColor}"/>
            <Image x:Name="imageLabel" HeightRequest="200" WidthRequest="200" HorizontalOptions="Center"/>
            <Label Text="&#x0a;"/>
            <Label x:Name="titleLabel" Style="{StaticResource SubtitleStyle}"/>
            <Label x:Name="releaseDateLabel" Style="{StaticResource SubtitleStyle}"/>
            <Label Text="&#x0a;"/>
            <Label x:Name="genreLabel" Style="{StaticResource SubtitleStyle}"/>
            <Label Text="&#x0a;"/>
            <Label x:Name="descriptionLabel" Style="{StaticResource SubtitleStyle}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
