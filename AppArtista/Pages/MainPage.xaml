<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppArtista.Pages.MainPage">

    <Grid>
        <Image
            Source="https://idolosmx.com/wp-content/uploads/2023/11/image-5.png"
            Aspect="AspectFill"
            Opacity="0.5"/>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Label
                Text="J U N I O R   H"
                Style="{StaticResource TitleStyle}" />
            <Label
                Text="━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
                HorizontalOptions="Center" 
                VerticalOptions="Center"
                TextColor="{DynamicResource PrimaryColor}"
                />
        </VerticalStackLayout>
        <HorizontalStackLayout
            HorizontalOptions="Center"
            VerticalOptions="End"
            Padding="0,0,0,30"
            Spacing="20">
            
            <Button Text="Azul"
                    FontAttributes="Bold"
                    Clicked="OnBlueClicked"
                    BackgroundColor="{DynamicResource PrimaryColor}"
                    TextColor="{StaticResource TextWhite}"/>

            <Button Text="Dorado"
                    FontAttributes="Bold"
                    Clicked="OnGoldClicked"
                    BackgroundColor="{DynamicResource PrimaryColor}"
                    TextColor="{StaticResource TextWhite}"/>

            <Button Text="Rojo"
                    FontAttributes="Bold"
                    Clicked="OnRedClicked"
                    BackgroundColor="{DynamicResource PrimaryColor}"
                    TextColor="{StaticResource TextWhite}"/>
        </HorizontalStackLayout>
    </Grid>

</ContentPage>
