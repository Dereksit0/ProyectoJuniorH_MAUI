<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppArtista.Pages.Discografia"
             Title="Discografia">
    <Grid>  
        <CollectionView x:Name="albumsCollectionView"
                      HorizontalOptions="Center">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Background="#212121" Stroke="#347aeb" StrokeShape="RoundRectangle 10" Margin="10" Padding="10">
                        <VerticalStackLayout>
                            <Label Text="{Binding Title}"
                                   FontSize="16"/>
                            <Label Text="{Binding ReleaseDate}"
                                   FontSize="14"/>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>