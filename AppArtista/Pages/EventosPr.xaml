<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppArtista.Pages.EventosPr"
             Shell.FlyoutBehavior="Flyout"
             Title="Eventos Proximos">

    <Grid>
        <ListView x:Name="eventPrListView"
                  HorizontalOptions="FillAndExpand"
                  VerticalOptions="FillAndExpand"
                  ItemSelected="OnEventSelectedPr">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame
                            Margin="8"
                            Padding="15"
                            CornerRadius="12"
                            BackgroundColor="#212121">
                            <StackLayout
                                    Padding="12,0,0,0"
                                    Spacing="4">
                                <Label
                                        Text="{Binding City}"
                                        FontSize="18"
                                        FontAttributes="Bold"
                                        TextColor="White"/>
                                <Label
                                        Text="{Binding Date}"
                                        FontSize="13"
                                        TextColor="White"/>
                            </StackLayout>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>
